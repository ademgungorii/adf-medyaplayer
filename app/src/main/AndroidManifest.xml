<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.adfmedya.player">

    <!-- Uygulama için gerekli izinler -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/adf_logo"
        android:label="ADF Medya Player"
        android:roundIcon="@drawable/adf_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.AdfMedyaPlayer">

        <!-- Splash ekran: uygulama açıldığında ilk çalışan activity -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.AdfMedyaPlayer">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Ana ekran -->
        <activity
            android:name=".MainActivity"
            android:exported="true" />

        <!-- IPTV oynatıcı ekran -->
        <activity
            android:name=".PlayerActivity"
            android:exported="true"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="sensor" />
    </
